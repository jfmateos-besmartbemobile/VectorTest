<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.mobile.android.smartick.activities.LoginActivity"
    >

  <Button
      android:id="@+id/login_button_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/purple_button_back_selector"
      android:clickable="true"
      android:onClick="irWelcome"
      />

  <Button
      android:id="@+id/change_language_button"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_above="@+id/tv_change_language"
      android:layout_marginLeft="54dp"
      android:background="@drawable/language_new"
      android:gravity="center_horizontal"
      android:onClick="showLanguageSelector"
      />

  <TextView
      android:id="@+id/tv_change_language"
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/main_activity_root"
      android:layout_alignLeft="@+id/login_button_back"
      android:layout_alignStart="@+id/login_button_back"
      android:gravity="center"
      android:text="@string/set_language"
      android:textColor="@color/WhiteColor"
      android:textSize="22sp"
      tools:text="Cambio idioma"
      />

  <Button
      android:id="@+id/login_button_dev_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_margin="2dp"
      android:background="@color/blue_btn_bg_color"
      android:clickable="true"
      android:elevation="3dp"
      android:onClick="mostrarDevMenu"
      android:padding="10dp"
      android:text="DEV"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:visibility="gone"
      />

  <RelativeLayout
      android:id="@+id/main_activity_root"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      >

    <RelativeLayout
        android:id="@+id/card_login_panel_tutores"
        android:layout_width="@dimen/login_panel_tutores_width"
        android:layout_height="@dimen/login_panel_tutores_height"
        android:visibility="gone"
        tools:visibility="visible"
        >

      <com.mobile.android.smartick.cutomviews.LeftImageButton
          android:id="@+id/login_tutor_flip_button"
          android:layout_width="290dp"
          android:layout_height="72dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="3dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/login_card_bg_tab"
          android:clickable="true"
          android:onClick="mostrarLoginAlumno"
          android:paddingLeft="10dp"
          android:textColor="#FFF"
          android:textSize="40sp"
          custom:image="@drawable/login_student_icon"
          custom:imageHeight="80dp"
          custom:imageWidth="60dp"
          custom:label="@string/Students"
          />

      <RelativeLayout
          android:id="@+id/login_panel_tutores"
          android:layout_width="@dimen/login_panel_tutores_width"
          android:layout_height="@dimen/login_panel_tutores_height"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/login_card_bg_students"
          android:orientation="vertical"
          android:padding="10dp"
          >

        <ImageView
            android:id="@+id/login_icon_cabecera_tutores"
            android:src="@drawable/login_tutor_icon"
            style="@style/login_main_tab_icon"
            />

        <TextView
            android:id="@+id/login_label_cabecera_tutores"
            android:layout_toRightOf="@id/login_icon_cabecera_tutores"
            android:text="@string/Tutors"
            style="@style/login_main_tab_label"
            />

        <include
            layout="@layout/tutor_login"
            android:id="@+id/tutor_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_label_cabecera_tutores"
            android:layout_marginTop="20dp"
            tools:visibility="gone"
            />

        <com.mobile.android.smartick.cutomviews.LeftImageButton
            android:id="@+id/tutor_active"
            android:layout_width="500dp"
            android:layout_height="120dp"
            android:layout_below="@+id/login_label_cabecera_tutores"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_entry_panel_selector"
            android:textSize="19sp"
            custom:image="@drawable/login_tutor_icon"
            custom:imageHeight="45dp"
            custom:imageWidth="110dp"
            custom:label="@string/change_tutor"
            android:tint="@color/BlueColor"
            />


        <ListView
            android:id="@+id/list_tutores"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_above="@+id/other_tutor_button"
            android:layout_below="@+id/login_label_cabecera_tutores"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="gone"
            tools:visibility="gone"
            />

        <com.mobile.android.smartick.cutomviews.LeftImageButton
            android:id="@+id/change_tutor_button"
            android:background="@drawable/change_tutor_selector"
            android:onClick="cambiarTutor"
            android:paddingLeft="20dp"
            android:textSize="34sp"
            android:visibility="gone"
            custom:image="@drawable/change_tutor_icon"
            custom:imageHeight="70dp"
            custom:imageWidth="110dp"
            custom:label="@string/change_tutor"
            tools:visibility="visible"
            style="@style/login_bottom_button"
            />

        <Button
            android:id="@+id/other_tutor_button"
            android:background="@drawable/add_tutor_selector"
            android:onClick="entrarComoOtroTutor"
            android:text="@string/Login_as_other_Tutor"
            android:paddingLeft="20dp"
            android:textSize="34sp"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/login_bottom_button"
            />

      </RelativeLayout>

      <View
          android:id="@+id/login_panel_alumnos_shadow"
          android:layout_width="@dimen/login_panel_tutores_width"
          android:layout_height="@dimen/login_panel_tutores_width"
          android:layout_centerInParent="true"
          android:background="@color/loginFlipShadowColor"
          tools:visibility="gone"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_login_panel_alumnos"
        android:layout_width="@dimen/login_panel_alumnos_width"
        android:layout_height="@dimen/login_panel_alumnos_width"
        tools:visibility="gone"
        >

      <com.mobile.android.smartick.cutomviews.LeftImageButton
          android:id="@+id/login_student_flip_button"
          android:layout_width="290dp"
          android:layout_height="70dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="3dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/login_card_bg_tab"
          android:clickable="true"
          android:onClick="mostrarLoginTutor"
          android:paddingLeft="10dp"
          android:textColor="#FFF"
          android:textSize="40sp"
          custom:image="@drawable/login_tutor_icon"
          custom:imageHeight="80dp"
          custom:imageWidth="60dp"
          custom:label="@string/Tutors"
          />

      <RelativeLayout
          android:id="@+id/login_panel_alumnos"
          android:layout_width="@dimen/login_panel_alumnos_width"
          android:layout_height="@dimen/login_panel_alumnos_width"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/login_card_bg_students"
          android:orientation="vertical"
          android:padding="10dp"
          >

        <ImageView
            android:id="@+id/login_icon_cabecera_alumnos"
            android:src="@drawable/login_student_icon"
            style="@style/login_main_tab_icon"
            />

        <TextView
            android:id="@+id/login_label_cabecera_alumnos"
            android:layout_toRightOf="@id/login_icon_cabecera_alumnos"
            android:text="@string/Students"
            style="@style/login_main_tab_label"
            />

        <ListView
            android:id="@+id/list_alumnos"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_above="@+id/login_alumno_button"
            android:layout_below="@+id/login_label_cabecera_alumnos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            />

        <LinearLayout
            android:id="@+id/ll_add_students"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/login_alumno_button"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            >

          <com.mobile.android.smartick.cutomviews.LeftImageButton
              android:onClick="addNewStudent"
              custom:image="@drawable/register_new_user_icon"
              custom:label="Añadir nuevo alumno"
              style="@style/login_add_students_buttons"
              />
          <com.mobile.android.smartick.cutomviews.LeftImageButton
              android:onClick="addExistingStudent"
              custom:image="@drawable/add_existing_student_icon"
              custom:label="Añadir aluno exisitente"
              style="@style/login_add_students_buttons"
              />
          <com.mobile.android.smartick.cutomviews.LeftImageButton
              android:onClick="addAllMyStudents"
              custom:image="@drawable/add_all_my_studedents_icon"
              custom:label="Añadir todos mis alumnos"
              style="@style/login_add_students_buttons"
              />

        </LinearLayout>

        <Button
            android:id="@+id/login_alumno_button"
            android:background="@drawable/add_student_selector"
            android:onClick="addAnotherStudent"
            android:text="@string/Login_as_other_Student"
            style="@style/login_bottom_button"
            />
      </RelativeLayout>

      <View
          android:id="@+id/login_panel_tutores_shadow"
          android:layout_width="@dimen/login_panel_tutores_width"
          android:layout_height="@dimen/login_panel_tutores_width"
          android:layout_centerInParent="true"
          android:alpha="0"
          android:background="@color/loginFlipShadowColor"
          tools:visibility="gone"
          />

    </RelativeLayout>

  </RelativeLayout>

  <include
      layout="@layout/panel_login_alumno"
      tools:visibility="gone"
      />

</RelativeLayout>

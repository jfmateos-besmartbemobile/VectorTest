<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    tools:context="com.mobile.android.smartick.activities.LoginActivity"
    >

  <Button
      android:id="@+id/login_button_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/purple_button_back_selector"
      android:clickable="true"
      android:onClick="irWelcome"
      />

  <Button
      android:id="@+id/change_language_button"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_above="@+id/tv_change_language"
      android:layout_marginLeft="54dp"
      android:background="@drawable/language_new"
      android:gravity="center_horizontal"
      android:onClick="showLanguageSelector"
      />

  <TextView
      android:id="@+id/tv_change_language"
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/login_button_back"
      android:layout_alignStart="@+id/login_button_back"
      android:layout_alignTop="@+id/fb_login_button"
      android:gravity="center"
      android:text="@string/set_language"
      android:textColor="@color/WhiteColor"
      android:textSize="22sp"
      tools:text="Cambio idioma"
      />

  <Button
      android:id="@+id/login_button_dev_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginLeft="15dp"
      android:background="@color/blue_btn_bg_color"
      android:clickable="true"
      android:onClick="mostrarDevMenu"
      android:text="dev"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:visibility="gone"
      />

  <RelativeLayout
      android:id="@+id/main_activity_root"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:background="@android:color/transparent"
      >

    <RelativeLayout
        android:id="@+id/card_login_panel_tutores"
        android:layout_width="@dimen/login_panel_tutores_width"
        android:layout_height="@dimen/login_panel_tutores_height"
        android:visibility="gone"
        tools:visibility="gone"
        >

      <RelativeLayout
          android:layout_width="295dp"
          android:layout_height="90dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="3dp"
          >

        <Button
            android:id="@+id/login_tutor_flip_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_card_bg_tab"
            android:clickable="true"
            android:onClick="mostrarLoginAlumno"
            />

        <ImageView
            android:id="@+id/login_tutor_flip_button_icon"
            android:src="@drawable/login_student_icon"
            style="@style/login_secondary_tab_icon"
            />

        <TextView
            android:id="@+id/login_tutor_flip_button_label"
            android:layout_toRightOf="@+id/login_tutor_flip_button_icon"
            android:text="@string/Students"
            style="@style/login_secondary_tab_label"
            />

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/login_panel_tutores"
          android:layout_width="@dimen/login_panel_tutores_width"
          android:layout_height="@dimen/login_panel_tutores_height"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/login_card_bg_students"
          android:orientation="vertical"
          android:padding="10dp"
          >

        <ImageView
            android:id="@+id/login_icon_cabecera_tutores"
            android:src="@drawable/login_tutor_icon"
            style="@style/login_main_tab_icon"
            />

        <TextView
            android:id="@+id/login_label_cabecera_tutores"
            android:layout_toRightOf="@id/login_icon_cabecera_tutores"
            android:text="@string/Tutors"
            style="@style/login_main_tab_label"
            />

        <ListView
            android:id="@+id/list_tutores"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_above="@+id/login_tutor_button"
            android:layout_below="@+id/login_label_cabecera_tutores"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            />

        <Button
            android:id="@+id/login_tutor_button"
            android:background="@drawable/add_tutor_selector"
            android:onClick="entrarComoOtroTutor"
            android:text="@string/Login_as_other_Tutor"
            style="@style/login_bottom_button"
            />

      </RelativeLayout>

      <View
          android:id="@+id/login_panel_alumnos_shadow"
          android:layout_width="@dimen/login_panel_tutores_width"
          android:layout_height="@dimen/login_panel_tutores_width"
          android:layout_centerInParent="true"
          android:background="@color/loginFlipShadowColor"
          tools:visibility="gone"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_login_panel_alumnos"
        android:layout_width="@dimen/login_panel_alumnos_width"
        android:layout_height="@dimen/login_panel_alumnos_width"
        tools:visibility="visible"
        >

      <RelativeLayout
          android:layout_width="295dp"
          android:layout_height="90dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="3dp"
          >
        <Button
            android:id="@+id/login_student_flip_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_card_bg_tab"
            android:clickable="true"
            android:onClick="mostrarLoginTutor"
            />

        <ImageView
            android:id="@+id/login_student_flip_button_icon"
            android:src="@drawable/login_tutor_icon"
            style="@style/login_secondary_tab_icon"
            />

        <TextView
            android:id="@+id/login_student_flip_button_label"
            android:layout_toRightOf="@+id/login_student_flip_button_icon"
            android:text="@string/Tutors"
            style="@style/login_secondary_tab_label"
            />

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/login_panel_alumnos"
          android:layout_width="@dimen/login_panel_alumnos_width"
          android:layout_height="@dimen/login_panel_alumnos_width"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/login_card_bg_students"
          android:orientation="vertical"
          android:padding="10dp"
          >

        <ImageView
            android:id="@+id/login_icon_cabecera_alumnos"
            android:src="@drawable/login_student_icon"
            style="@style/login_main_tab_icon"
            />

        <TextView
            android:id="@+id/login_label_cabecera_alumnos"
            android:layout_toRightOf="@id/login_icon_cabecera_alumnos"
            android:text="@string/Students"
            style="@style/login_main_tab_label"
            />

        <ListView
            android:id="@+id/list_alumnos"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_above="@+id/login_alumno_button"
            android:layout_below="@+id/login_label_cabecera_alumnos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            />

        <Button
            android:id="@+id/login_alumno_button"
            android:background="@drawable/add_student_selector"
            android:onClick="entrarComoOtroAlumno"
            android:text="@string/Login_as_other_Student"
            style="@style/login_bottom_button"
            />
      </RelativeLayout>

      <View
          android:id="@+id/login_panel_tutores_shadow"
          android:layout_width="@dimen/login_panel_tutores_width"
          android:layout_height="@dimen/login_panel_tutores_width"
          android:layout_centerInParent="true"
          android:alpha="0"
          android:background="@color/loginFlipShadowColor"
          tools:visibility="gone"
          />

    </RelativeLayout>

  </RelativeLayout>

  <Button
      android:id="@+id/fb_login_button"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="50dp"
      android:layout_marginRight="50dp"
      android:background="@drawable/fb_logo"
      android:gravity="center_horizontal"
      android:text=""
      />
  <Button
      android:id="@+id/google_sign_in"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="120dp"
      android:layout_marginRight="50dp"
      android:background="@drawable/google_logo"
      />

  <include
      layout="@layout/panel_login_alumno"
      tools:visibility="gone"
      />
  <include
      layout="@layout/panel_login_tutor"
      tools:visibility="gone"
      />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartick.activities.RegistroActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/register_panel"
        android:orientation="horizontal">

        <Button
            android:id="@+id/registro_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/registro_home_selector"
            android:clickable="true"
            android:onClick="irMain"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            />

        <EditText
            android:id="@+id/registro_alias"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corner"
            android:hint="@string/alias_hint"
            android:inputType="text"
            android:layout_margin="20dp" />
        <EditText
            android:id="@+id/registro_password"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corner"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:layout_margin="20dp" />

        <Button
            android:id="@+id/registro_forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/registro_forward_green_selector"
            android:clickable="true"
            android:onClick="irSiguiente"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            />

    </LinearLayout>

</RelativeLayout>

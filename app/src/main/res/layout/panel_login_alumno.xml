<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_login_alumno"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/student_panel_holder"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:text="@string/entrar_alumno"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp"
        android:gravity="center_horizontal"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight=".6"
        android:gravity="center_vertical">

    <ImageView  android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/student_info_icon"
        android:layout_marginLeft="40dp" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_alias"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corner"
            android:hint="@string/alias_hint"
            android:inputType="text"
            android:layout_margin="20dp" />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corner"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:layout_margin="20dp" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight=".2"
        android:layout_gravity="bottom">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".1" />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:layout_height="wrap_content"
            android:onClick="cancelar"
            android:background="@drawable/blue_confirm_selector"
            android:text="@string/cancelar"
            android:textColor="@color/white"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".1" />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:layout_height="wrap_content"
            android:onClick="loginAlumno"
            android:background="@drawable/orange_confirm_selector"
            android:text="@string/aÃ±adir"
            android:textColor="@color/white"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".1" />
    </LinearLayout>
</LinearLayout>
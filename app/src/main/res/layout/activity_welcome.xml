<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.android.smartick.activities.WelcomeActivity"
    android:background="@drawable/home_screen_bg">


    <LinearLayout android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_gravity="bottom"
        >

        <LinearLayout android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent">

            <Button
                android:id="@+id/main_button_invitado"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:background="@drawable/blue_confirm_selector"
                android:text="@string/invitado"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/button_intro"
                android:id="@+id/imageView"
                />

        </LinearLayout>

        <LinearLayout android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent">
            <Button
                android:id="@+id/main_button_registro"
                android:layout_width="wrap_content"
                android:layout_height="75sp"
                android:layout_gravity="center"
                android:background="@drawable/orange_confirm_selector"
                android:onClick="irRegistro"
                android:text="@string/registro"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/main_button_login"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/green_login_button"
                android:onClick="irLogin"
                android:text="@string/ya_soy_usuario"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


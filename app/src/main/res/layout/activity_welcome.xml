<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.android.smartick.activities.WelcomeActivity"
    android:background="@drawable/home_screen_bg">


    <LinearLayout android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_gravity="bottom"
        >

        <LinearLayout android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent">

            <Button
                android:id="@+id/main_button_invitado"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/blue_confirm_selector"
                android:text="@string/Guest"
                style="@style/button_text_blue"/>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="118dp"
                android:onClick="irIntro"
                android:clickable="true"
                >

                <ImageView
                    android:id="@+id/main_intro_image_view"
                    android:paddingTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/button_intro"
                    />

                <TextView
                    android:id="@+id/main_intro_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/plusInfo"
                    android:textSize="18dp"
                    android:textColor="@color/WhiteColor"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="20dp"
                    />
                </RelativeLayout>

        </LinearLayout>

        <LinearLayout android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent">
            <Button
                android:id="@+id/main_button_registro"
                android:layout_width="350dp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:background="@drawable/orange_confirm_selector"
                android:onClick="irRegistro"
                android:text="@string/Register"
                style="@style/button_text_orange"/>

            <Button
                android:id="@+id/main_button_login"
                android:layout_width="350dp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/green_login_button"
                android:onClick="irLogin"
                android:text="@string/I_already_use_Smartick"
                android:gravity="left|center_vertical"
                android:paddingLeft="32dp"
                style="@style/button_text_green"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


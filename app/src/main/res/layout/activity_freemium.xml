<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/avatar_selection_bg"
    android:orientation="vertical"
    >

  <Button
      android:id="@+id/freemium_button_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/purple_button_back_selector"
      android:clickable="true"
      android:onClick="backButtonPressed"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:baselineAligned="false"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:weightSum="2"
      >

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        >

      <TextView
          android:id="@+id/text_choose_avatar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="220dp"
          android:padding="2dp"
          android:shadowColor="@color/BlueColorDarker"
          android:shadowDx="0"
          android:shadowDy="0"
          android:shadowRadius="3"
          android:text="@string/Choose_your_avatar"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="@dimen/freemium_title_text_size"
          />

      <TextView
          android:id="@+id/text_is_avatar_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="100dp"
          android:gravity="center"
          android:shadowColor="@color/BlueColorDarker"
          android:shadowDx="0"
          android:shadowDy="0"
          android:shadowRadius="3"
          android:text="@string/Use_this_avatar_int"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="@dimen/freemium_title_text_size"
          />

      <TextView
          android:id="@+id/text_how_old"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="20dp"
          android:shadowColor="@color/BlueColorDarker"
          android:shadowDx="0"
          android:shadowDy="0"
          android:shadowRadius="3"
          android:text="@string/How_old_are_you_int"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="@dimen/freemium_title_text_size"
          />


      <com.mobile.android.smartick.UI.CustomSeekBar
          android:id="@+id/avatarAgeSeekBar"
          android:layout_width="500dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/text_how_old"
          android:layout_gravity="center_vertical"
          android:clipChildren="false"
          android:gravity="center"
          android:maxHeight="@dimen/freemium_age_bar_max_height"
          android:minHeight="@dimen/freemium_age_bar_min_height"
          android:paddingLeft="60dp"
          android:paddingRight="60dp"
          android:textAlignment="center"
          style="@style/CustomSeekBar"
          />

      <Button
          android:id="@+id/confirmAgeButton"
          android:layout_width="@dimen/freemium_button_width"
          android:layout_height="@dimen/freemium_button_height"
          android:layout_below="@+id/avatarAgeSeekBar"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/orange_confirm_selector"
          android:clickable="true"
          android:onClick="okAvatarAgePressed"
          android:text="@string/Start"
          android:textColor="@color/WhiteColor"
          android:textSize="@dimen/freemium_button_text_size"
          />


      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_is_avatar_ok"
          android:layout_marginTop="30dp"
          android:gravity="center_horizontal"
          android:paddingLeft="40dp"
          android:paddingRight="40dp"
          >

        <Button
            android:id="@+id/avatar_select_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="start"
            android:background="@drawable/round_red_cancel_selector"
            android:clickable="true"
            android:onClick="cancelAvatarPressed"
            />

        <Button
            android:id="@+id/avatar_select_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_green_confirm_selector"
            android:clickable="true"
            android:onClick="okAvatarPressed"
            />
      </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/avatar3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="150dp"
          android:layout_marginRight="-100dp"
          android:layout_toLeftOf="@+id/avatar7"
          android:layout_toStartOf="@+id/avatar7"
          android:src="@drawable/avatar3"
          android:tag="3"
          />

      <ImageView
          android:id="@+id/avatar9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="150dp"
          android:layout_marginLeft="-100dp"
          android:layout_toEndOf="@+id/avatar8"
          android:layout_toRightOf="@+id/avatar8"
          android:src="@drawable/avatar9"
          android:tag="9"
          />

      <ImageView
          android:id="@+id/avatar7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="150dp"
          android:layout_marginLeft="100dp"
          android:layout_toRightOf="@+id/avatar5"
          android:src="@drawable/avatar7"
          android:tag="7"
          />

      <ImageView
          android:id="@+id/avatar8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="150dp"
          android:layout_marginRight="100dp"
          android:layout_toLeftOf="@+id/avatar5"
          android:src="@drawable/avatar8"
          android:tag="8"
          />

      <ImageView
          android:id="@+id/avatar6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="40dp"
          android:layout_marginRight="30dp"
          android:layout_toLeftOf="@+id/avatar2"
          android:src="@drawable/avatar6"
          android:tag="6"
          />

      <ImageView
          android:id="@+id/avatar2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="20dp"
          android:layout_marginRight="30dp"
          android:layout_toLeftOf="@+id/avatar5"
          android:layout_toStartOf="@+id/avatar5"
          android:src="@drawable/avatar2"
          android:tag="2"
          />

      <ImageView
          android:id="@+id/avatar5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="10dp"
          android:src="@drawable/avatar5"
          android:tag="5"
          />

      <ImageView
          android:id="@+id/avatar1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="20dp"
          android:layout_toEndOf="@+id/avatar5"
          android:layout_toRightOf="@+id/avatar5"
          android:src="@drawable/avatar1"
          android:tag="1"
          />

      <ImageView
          android:id="@+id/avatar4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="40dp"
          android:layout_marginLeft="30dp"
          android:layout_toRightOf="@+id/avatar1"
          android:src="@drawable/avatar4"
          android:tag="4"
          />

    </RelativeLayout>

  </LinearLayout>

  <ImageView
      android:id="@+id/avatarSelectedPreview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:src="@drawable/avatar1_big"
      tools:visibility="invisible"
      />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/register_modal_background"
    android:padding="30dp">

    <TextView
        android:id="@+id/titleRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="title"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/WhiteColor"/>

    <TextView
        android:id="@+id/textRegisterModal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BlueColor"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleRegister"
        android:text="content register" />


    <ImageView
        android:src="@drawable/login_bg"
        android:id="@+id/imageViewRegister"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textRegisterModal"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/registerModalButton"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/orange_confirm_selector"
        android:text="@string/Register"
        android:textSize="25dp"
        android:onClick="registerButtonPressed"
        android:clickable="true"
        android:layout_below="@+id/imageViewRegister"
        android:layout_alignParentLeft="true"
        android:textColor="@color/WhiteColor"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/laterGameRegisterButton"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/blue_confirm_selector"
        android:text="@string/Later"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="laterGameButtonPressed"
        android:textColor="@color/WhiteColor"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageViewRegister"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>